<Window x:Class="Filmoteka.AddComment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filmoteka"
        mc:Ignorable="d"
        Title="AddComment" Height="800" Width="600">
    <Grid>
        <StackPanel>
            <Image x:Name="img_film" Margin="20" Source="Films/обложки/комедия/тиет.jpg" Width="200"/>
            <TextBlock x:Name="txtb_film" MaxWidth="400" MaxHeight="100" FontSize="35" Margin="20"/>
            <TextBox x:Name="txtb_comment" Width="400" Height="250" Margin="20" FontSize="20"/>
            <Button Margin="0 5 0 0" Content="Добавить отзыв" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="MicroSquare" FontSize="25" x:Name="btn_addcomm" Click="btn_addcomm_Click"  Width="300" Height="50">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="50" Color="Black" ShadowDepth="0"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>
